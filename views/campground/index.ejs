<% include ../partials/header %>

<div class="container">
    <div class="jumbotron">
        <div class="container">
          <h1 class="display-4">Welcome to YelpCamp!</h1>
          <p class="lead">View our camps from all over the world!</p>
          <hr class="my-4">
          <p class="lead">
            <a class="btn btn-primary btn-lg" href="/campgrounds/new" role="button">Add new camp!</a>
          </p>
      </div>
    </div>
</div>

<div class="container">
    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% campgrounds.forEach(function(campground) { %>
    
            <div class="col-md-3">
                <div class="thumbnail">
                     <img src="<%= campground.image %>">
                     <div class="caption">
                        <h5 class="card-title"><%=  campground.name%></h5>
                        <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">Show Info</a>
                    </div>
                </div>
            </div>
        <% })  %>
    </div>
</div>


<% include ../partials/footer %>